{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "startCommand": "sh -c 'uvicorn app:app --host 0.0.0.0 --port ${PORT:-8080}'",
    "healthcheckPath": "/health",
    "restartPolicyType": "ON_FAILURE"
  },
  "volumes": {
    "tidal_data": {
      "mountPath": "/data"
    }
  }
}
